@model IEnumerable<WebApp.Models.Category>

@{
    ViewData["Title"] = "Category";
}


<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-outline-info" asp-controller="Category" asp-action="Create">Create New Category</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
               {
                   <tr>
                       <td width="10%">@item.ID</td>
                       <td width="50%">@item.Name</td>
                       <td width="30%">@item.DisplayOrder</td>
                       <td width="50%">
                           <div><a class="btn btn-outline-warning">Edit</a></div>
                           <div><a class="btn btn-outline-danger">Delete</a></div>
                       </td>
                   </tr>
               }
            </tbody>
        </table>
    }
</div>

